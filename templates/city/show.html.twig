{% extends 'base.html.twig' %}

{% block title %}Détail de la ville{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Détails de la ville</h2>
            <p class="text-muted">Informations concernant la ville sélectionnée</p>
        </div>
        <a href="{{ path('app_city_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered mb-0">
                <tbody>
                    <tr>
                        <th class="bg-light w-25">Identifiant</th>
                        <td>{{ city.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Nom</th>
                        <td>{{ city.name }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Frais de livraison</th>
                        <td><span class="badge bg-primary">{{ city.shippingCost }} €</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4 flex-wrap">
        <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-outline-success">
            <i class="bi bi-pencil-square"></i> Modifier
        </a>

        {{ include('city/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
