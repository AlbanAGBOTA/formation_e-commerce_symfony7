{% extends 'base.html.twig' %}

{% block title %}Modifier une ville{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="mb-4">
        <h2 class="mb-0">Modifier la ville</h2>
        <p class="text-muted">Mets à jour les informations de la ville ci-dessous.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ include('city/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="d-flex gap-3 mt-4">
        <a href="{{ path('app_city_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>

        <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-outline-success">
            <i class="bi bi-pencil"></i> Modifier
        </a>

        {{ include('city/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
