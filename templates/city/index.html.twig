{% extends 'base.html.twig' %}

{% block title %}Liste des Villes{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Liste des Villes</h2>
        <a class="btn btn-primary" href="{{ path('app_city_new') }}">
            <i class="bi bi-plus-lg"></i> Ajouter une ville
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Frais de livraison</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for city in cities %}
                    <tr>
                        <td>{{ city.id }}</td>
                        <td>{{ city.name }}</td>
                        <td>{{ city.shippingCost }} €</td>
                        <td class="text-center">
                            <a class="btn btn-outline-info btn-sm me-1" href="{{ path('app_city_show', {'id': city.id}) }}">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a class="btn btn-outline-success btn-sm" href="{{ path('app_city_edit', {'id': city.id}) }}">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucune ville trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
