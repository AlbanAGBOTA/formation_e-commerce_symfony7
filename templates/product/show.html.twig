{% extends 'base.html.twig' %}

{% block title %}Détail du produit{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Détail du produit</h2>
            <p class="text-muted">Toutes les informations liées à ce produit</p>
        </div>
        <a class="btn btn-outline-secondary" href="{{ path('app_product_index') }}">
            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 25%" class="bg-light">ID</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Description</th>
                        <td>{{ product.description|default('—') }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Prix</th>
                        <td><span class="badge bg-success fs-6">{{ product.price }} €</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4 flex-wrap">
        <a class="btn btn-outline-success" href="{{ path('app_product_edit', {'id': product.id}) }}">
            <i class="bi bi-pencil-square"></i> Modifier
        </a>

        <a class="btn btn-outline-info" href="{{ path('app_product_stock_add_history', {'id': product.id}) }}">
            <i class="bi bi-clock-history"></i> Historique du stock
        </a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

