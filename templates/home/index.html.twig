{% extends 'base.html.twig' %}

{% block title %} My Shop {% endblock %}

{% block body %}
<div class="container">
    <h1>Produits</h1>
    <div class="row">
        {% for product in products %}
        <div class="col-md-3 mt-4">
            <div class="card h-100" style="width: 18rem;">
                <!-- Image avec 'object-fit: cover' pour que l'image occupe tout l'espace sans dÃ©formation -->
                <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="..." style="object-fit: cover; height: 200px;">
                <div class="card-body d-flex flex-column">
                    <a style="text-decoration: none; color: green;" href="{{ path('app_home_product_show', {'id': product.id}) }}">
                        <h5 class="card-title">{{ product.name }}</h5>
                    </a>
                    <p class="card-text">{{ product.description | slice(0, 50) }}</p>
                    <h3>{{ product.price }} Euro</h3>
                    <a href="{{ path('app_cart_new', {'id': product.id}) }}" class="text-success text-decoration-none">Ajouter au panier</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <br><br><br>
    {{ knp_pagination_render(products, 'layout/pagination_template.html.twig') }}
</div>
{% endblock %}
